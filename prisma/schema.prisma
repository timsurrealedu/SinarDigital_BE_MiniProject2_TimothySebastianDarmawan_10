generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Can be postgresql as allowed [cite: 9]
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String?  // Stores path/filename [cite: 22]
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}